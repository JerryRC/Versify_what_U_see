<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <!--实现应用背景颜色渐变-->
            <gradient
                android:startColor="#66F2ABFF"
                android:centerColor="#66EB78FF"
                android:endColor="#66E138FF"
                android:angle="0"/>
            <corners
                android:topLeftRadius="500dp"
                android:bottomLeftRadius="500dp"
                />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape
            android:shape="rectangle">
            <!--实现应用背景颜色渐变-->
            <gradient
                android:startColor="#aaFFD4FA"
                android:centerColor="#aaFFADF5"
                android:endColor="#aaFF7DF0"
                android:angle="0"/>
            <corners
                android:topLeftRadius="500dp"
                android:bottomLeftRadius="500dp"
                />
        </shape>
    </item>
</selector>
